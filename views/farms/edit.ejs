<%- layout('/layouts/boilerplate') %>


    <div class="row">
        <div class="col-md-6 offset-md-3 col-10 offset-1">
            <div class="mt-5 card shadow">
                <h5 class="card-header text-uppercase text-bold text-center mb-2"><strong>Update</strong>
                </h5>
                <div class="card-body">
                    <form novalidate class="validated-form" action="/farms/<%=farm._id%>?_method=PUT" method="POST">
                        <div class="form-group mb-3">
                            <label for="name">Farm Name</label>
                            <input required value="<%=farm.name %>" type="text" class="form-control" id="name"
                                name="farm[name]" placeholder="farm name">
                        </div>
                        <div class="form-group mb-3">
                            <label for="city">City</label>
                            <input required value="<%=farm.city %>" type="text" class="form-control" id="city"
                                name="farm[city]" placeholder="city">
                        </div>
                        <div class="form-group mb-3">
                            <label for="email">Email id</label>
                            <input required value="<%=farm.email %>" type="email" class="form-control" id="email"
                                name="farm[email]" placeholder="abc@xyz.com">
                        </div>
                        <button type="submit" class=" mt-3 btn btn-success btn-sm">Update</button>
                        <a class="mt-3 btn btn-dark btn-sm" href="/farms/<%=farm._id%>">Go back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>