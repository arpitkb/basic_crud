<%- layout('/layouts/boilerplate') %>


    <div class="row">
        <div class="col-md-6 offset-md-3 col-10 offset-1">

            <div class="mt-5 card shadow">
                <h5 class="card-header text-uppercase text-bold text-center mb-2"><strong>Add a farm</strong>
                </h5>
                <div class="card-body">
                    <form action="/farms" method="POST" class="validated-form" novalidate>
                        <div class="form-group mb-3">
                            <label for="name">Farm Name</label>
                            <input required type="text" class="form-control" id="name" name="farm[name]"
                                placeholder="name">
                        </div>
                        <div class="form-group mb-3">
                            <label for="city">City</label>
                            <input required type="text" class="form-control" id="city" name="farm[city]"
                                placeholder="city">
                        </div>
                        <div class="form-group mb-3">
                            <label for="email">Email id</label>
                            <input required type="email" class="form-control" id="email" name="farm[email]"
                                placeholder="abc@xyz.com">
                        </div>
                        <button type="submit" class=" mt-3 btn btn-success btn-sm">Add</button>
                        <a class="mt-3 btn btn-dark btn-sm" href="/products">Go back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>