<%- layout('/layouts/boilerplate') %>
    <div class="row">
        <div class="col-md-6 offset-md-3 col-10 offset-1">
            <div class="card shadow">

                <h4 class="card-header text-uppercase text-bold text-center mb-4">Add here <b>(<%=name %>)</b>
                </h4>
                <div class="card-body">

                    <form novalidate class="validated-form" action="/farms/<%=id%>/products" method="POST">
                        <div class="form-group mb-2">
                            <label for="name">Product Name</label>
                            <input required type="text" class="form-control" id="name" name="product[name]"
                                placeholder="eg : cucumber">
                        </div>
                        <div class="form-group mb-3">
                            <label for="price">Price</label>
                            <input required type="text" class="form-control" id="price" name="product[price]"
                                placeholder="price in $">
                        </div>
                        <div class="form-group mb-3">
                            <label for="category">Select category</label>
                            <select required name="product[category]" class=" my-1 form-select" id="category">
                                <option value="fruit">Fruit</option>
                                <option value="vegetable">vegetable</option>
                                <option value="dairy">Dairy</option>
                            </select>
                        </div>
                        <button type="submit" class=" mt-3 btn btn-success btn-sm">Add</button>
                        <a class="mt-3 btn btn-dark btn-sm" href="/farms/<%=id %> ">Back to farm</a>
                    </form>
                </div>
            </div>
        </div>
    </div>