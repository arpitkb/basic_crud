<%- layout('/layouts/boilerplate') %>
    <div class="row">
        <div class="col-md-6 offset-md-3 col-10 offset-1">
            <div class="mt-5 card shadow">
                <h4 class="card-header text-uppercase text-bold text-center mb-4">Update here</h4>
                <div class="card-body">
                    <form novalidate class="validated-form" action="/products/<%=product._id%>?_method=PUT"
                        method="POST">
                        <div class="form-group mb-3">
                            <label for="name">Product Name</label>
                            <input required type="text" class="form-control" id="name" name="product[name]"
                                placeholder="eg : cucumber" value="<%=product.name%>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="price">Price</label>
                            <input required type="text" class="form-control" id="price" name="product[price]"
                                placeholder="price in $" value="<%=product.price%>">
                        </div>
                        <div class="form-group mb-3">
                            <label for="category">Select category</label>
                            <select required name="product[category]" class=" my-1 form-select" id="category">
                                <option value="fruit" <%=product.category=='fruit' ?"selected":"" %> >Fruit</option>
                                <option value="vegetable" <%=product.category=='vegetable' ?"selected":"" %>>vegetable
                                </option>
                                <option value="dairy" <%=product.category=='dairy' ?"selected":"" %>>Dairy</option>
                            </select>
                        </div>
                        <button type="submit" class=" mt-3 btn btn-success btn-sm">Update</button>
                        <a class="mt-3 btn btn-danger btn-sm" href="/products/<%=product._id%>">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>