<%- layout('/layouts/boilerplate') %>

    <div class="row">
        <div class="col-md-6 offset-md-3 col-10 offset-1">
            <div class="card text-center">
                <div style="background-color: #1b616e3f" class="card-header">Category
                    : <%= product.category %>
                </div>
                <div class="card-body text-success">
                    <h5 class="card-title">
                        <%= product.name.toUpperCase() %>
                    </h5>
                    <p class="card-text">FARM :
                        <%=product.farm.name.toUpperCase() %>
                    </p>
                </div>
                <div style="display: inline;" class="card-footer">Price : <%= product.price %>$
                </div>
                <div class="card-footer bg-transparent"><a class="btn btn-secondary btn-sm"
                        href="/products/<%=product.id%>/edit">Update </a> <span>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal"
                            data-bs-target="#exampleModal">Delete</button>
                    </span>
                    <a class="btn btn-dark btn-sm" href="/farms/<%=product.farm._id %> ">Go to farm</a>
                </div>

            </div>



            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Delete Product</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">Are you sure you want to delete this product</div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">No</button>
                            <form style="display: inline;" action="/products/<%= product._id %>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>